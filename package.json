{
	"name": "brei-project-scaffold",
	"version": "1.0.0",
	"description": "Client project by BarkleyREI",
	"dependencies": {
		"foundation-sites": "~6.5.1",
		"jquery": "~3.3.1",
		"modernizr": "~3.6.0",
		"what-input": "~5.1.3"
	},
	"devDependencies": {
		"assemble": "0.24.3",
		"assemble-helpers": "1.0.1",
		"autoprefixer": "8.6.5",
		"babel-core": "6.26.3",
		"babel-loader": "7.1.5",
		"babel-preset-es2015": "6.24.1",
		"browser-sync": "2.26.3",
		"brei-util": "^1.0.1",
		"cssnano": "4.1.7",
		"customizr": "1.1.0",
		"eslint": "5.10.0",
		"eslint-loader": "2.1.1",
		"gulp-extname": "0.2.2",
		"handlebars": "4.0.12",
		"handlebars-helpers": "0.10.0",
		"imagemin-cli": "3.0.0",
		"mocha": "5.2.0",
		"node-dir": "0.1.17",
		"node-sass": "4.11.0",
		"postcss": "7.0.6",
		"postcss-cli": "6.0.1",
		"postcss-loader": "2.1.6",
		"postcss-pxtorem": "4.0.1",
		"postcss-sass": "0.3.5",
		"postcss-sorting": "4.0.1",
		"sass-loader": "7.1.0",
		"stylelint": "9.10.0",
		"stylelint-scss": "3.4.1",
		"stylelint-selector-bem-pattern": "2.0.0",
		"uglifyjs-webpack-plugin": "1.3.0",
		"watch": "1.0.2",
		"webpack": "4.27.1",
		"webpack-cli": "3.1.2"
	},
	"scripts": {
		"check": "eslint -c _config/.eslintrc.json app/ejs",
		"copy:html": "cp -r app/*.html dist",
		"copy": "npm run copy:html",
		"clean:assemble": "rm -rf app/*.html && rm -rf app/modules/*.html",
		"clean:dist": "rm -rf dist/",
		"clean:web": "rm -rf ../web",
		"sass:lint": "stylelint \"app/scss/**/*.scss\" --fix --cache --cache-location \"./.stylelintcache/\" --config \"./_config/.stylelintrc.json\" --ignore-path \"./_config/.stylelintignore\"",
		"sass:preprocess": "node-sass app/scss -o app/css --source-map=true",
		"sass:build": "node-sass app/scss --output-style compressed -o dist/css --source-map=true",
		"postcss:fixsass": "postcss --config _config/ -r app/scss/**/*.scss --env=scss",
		"postcss:preprocess": "postcss --config _config/ -r app/css/main.css --env=css",
		"postcss:build": "postcss --config _config/ -r dist/css/main.css --env=scss",
		"assemble": "npm run clean:assemble && npm run assemble:build && npm run assemble:execute",
		"assemble:build": "assemble default modules --file _config/assemblefile.js",
		"assemble:execute": "node lib/updateScss.js",
		"preprocess:css": "npm run sass:lint && npm run sass:preprocess && npm run postcss:preprocess",
		"preprocess:js": "npx webpack --config ./_config/webpack.config.js",
		"preprocess": "npm run preprocess:css && npm run preprocess:js && npm run modernizr",
		"build:css": "npm run sass:lint && npm run sass:build && npm run postcss:build",
		"build:img": "imagemin app/img/* --out-dir=dist/img",
		"build:js": "npx webpack --config ./_config/webpack.config.js --mode=production",
		"build": "npm run clean:dist && npm run scaffold && npm run build:css && npm run build:img && npm run build:js && npm run copy",
		"modernizr": "customizr -c ./_config/modernizr-config.json",
		"deploy": "npm run clean:web && cp -r dist/ ../web",
		"watch:css": "watch --wait=1 --interval=5 \"npm run preprocess:css\" app/scss",
		"watch:js": "watch --wait=1 --interval=5 \"npm run preprocess:js\" app/ejs",
		"watch": "npm run watch:css & npm run watch:js &",
		"server": "npm run scaffold && browser-sync start --config ./_config/bs.config.js && npm run watch",
		"scaffold": "npm run assemble && npm run modernizr",
		"test": "mocha",
		"postinstall": "npm scaffold",
		"preinstall": "npm test"
	},
	"author": "BarkleyREI",
	"license": "ISC"
}
